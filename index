<script>
  // ===== CART STORAGE =====
  const CART_KEY = "exposureboost_cart_v1";
  const PRICE = 95;

  function getCart(){ try { return JSON.parse(localStorage.getItem(CART_KEY) || "[]"); } catch(e){ return []; } }
  function setCart(items){ localStorage.setItem(CART_KEY, JSON.stringify(items)); updateCartCount(); }
  function addToCart(item){
    const cart = getCart();
    cart.push(item);
    setCart(cart);
  }
  function updateCartCount(){
    const count = getCart().length;
    document.getElementById("cartCount").textContent = count;
  }
  updateCartCount();

  // ===== PRODUCT DATA (only 4 sections) =====
  const PRODUCTS = [
    { id:"gold", name:"Gold Metal Card", type:"single", bg:"linear-gradient(180deg,#C9A227 0%,#8A6A12 100%)", image:"assets/gold.jpg", example:"https://57jewellers.exposureboost.co.uk/" },
    { id:"rosegold", name:"Rose Gold Metal Card", type:"single", bg:"linear-gradient(180deg,#B76E79 0%,#6A3940 100%)", image:"assets/rosegold.jpg", example:"https://57jewellers.exposureboost.co.uk/" },
    { id:"silver", name:"Silver Metal Card", type:"single", bg:"linear-gradient(180deg,#F5F6F8 0%,#BFC4CC 100%)", image:"assets/silver.jpg", example:"https://advancesecurityalarms.exposureboost.co.uk/" },
    { id:"custom", name:"Custom Colour Metal Card", type:"custom", bg:"linear-gradient(180deg,#0F0F14 0%,#141422 100%)", example:"https://advancesecurityalarms.exposureboost.co.uk/" }
  ];

  const CUSTOM_COLOURS = [
    { id:"black",  label:"Black",  bg:"linear-gradient(180deg,#0F0F14 0%,#15151d 100%)", image:"assets/black.jpg" },   // placeholder
    { id:"white",  label:"White",  bg:"linear-gradient(180deg,#FFFFFF 0%,#DADCE2 100%)", image:"assets/white.jpg" },   // placeholder
    { id:"red",    label:"Red",    bg:"linear-gradient(180deg,#D11B3D 0%,#5A0716 100%)", image:"assets/red.jpg" }, // placeholder
    { id:"purple", label:"Purple", bg:"linear-gradient(180deg,#6E4DFF 0%,#2B1A7A 100%)", image:"assets/purple.jpg" }, // placeholder
    { id:"green",  label:"Green",  bg:"linear-gradient(180deg,#0E3B2E 0%,#051B15 100%)", image:"assets/green.jpg" },
    { id:"blue",   label:"Blue",   bg:"linear-gradient(180deg,#1B3FD1 0%,#06115A 100%)", image:"assets/blue.jpg" }      // placeholder
  ];

  const cardsMount = document.getElementById('cards');
  const dotsMount = document.getElementById('dots');
  const snap = document.getElementById('snap');

  // ===== Dots nav =====
  function buildDot(targetId,label){
    const dot = document.createElement('button');
    dot.className = 'dotBtn';
    dot.setAttribute('aria-label', label || `Go to ${targetId}`);
    dot.addEventListener('click', () => document.getElementById(targetId).scrollIntoView({behavior:'smooth'}));
    dotsMount.appendChild(dot);
    return dot;
  }
  const dotButtons = [];
  const allSections = [document.getElementById('top'), document.getElementById('why')];
  dotButtons.push(buildDot('top','Go to top'));
  dotButtons.push(buildDot('why','Why'));

  function isLightBackground(css){
    return css.includes("#FFFFFF") || css.includes("#F5F6F8") || css.includes("#DADCE2");
  }
  function readableText(light){ return light ? "#0F0F14" : "#FFFFFF"; }

  // ===== Build sections =====
  PRODUCTS.forEach((p)=>{
    const sec = document.createElement('section');
    sec.id = p.id;

    if(p.type === "single"){
      sec.style.background = p.bg;
      const light = isLightBackground(p.bg);
      const text = readableText(light);
      const desc = light ? "rgba(15,15,20,.70)" : "rgba(255,255,255,.78)";
      const note = light ? "rgba(15,15,20,.65)" : "rgba(255,255,255,.68)";
      sec.innerHTML = `
        <div class="blob" style="opacity:${light ? ".18" : ".30"}"></div>
        <div class="blob b2" style="opacity:${light ? ".16" : ".24"}"></div>

        <div class="wrap" style="color:${text}">
          <div>
            <div class="kicker" style="color:${text}; background:${light ? "rgba(15,15,20,.06)" : "rgba(255,255,255,.12)"}; border:1px solid ${light ? "rgba(15,15,20,.12)" : "rgba(255,255,255,.18)"};">
              <span class="kdot"></span> ${p.name}
            </div>
            <h1>${p.name}</h1>
            <p class="lead" style="color:${desc}; max-width:520px">Get remembered. Get saved. Get enquiries. Tap once and you look instantly premium.</p>

            <div class="priceRow">
              <div class="amount">¬£${PRICE}</div>
              <div class="note" style="color:${note};">one‚Äëtime ¬∑ card + profile</div>
            </div>

            <div class="actions">
              <button class="btn primary" data-add="${p.id}">üõí Add to cart</button>
              <a class="btn ghost" href="${p.example}" target="_blank" rel="noopener"
                 style="border:1px solid ${light ? "rgba(15,15,20,.18)" : "rgba(255,255,255,.18)"}; color:${text}">
                ‚Üó View example
              </a>
            </div>
          </div>

          <div>
            <div class="imgShell" style="border:1px solid ${light ? "rgba(15,15,20,.14)" : "rgba(255,255,255,.16)"}; background:${light ? "rgba(255,255,255,.42)" : "rgba(15,15,20,.22)"};">
              <img class="cardImg" src="${p.image}" alt="${p.name}">
              <div class="imgCap" style="color:${light ? "rgba(15,15,20,.65)" : "rgba(255,255,255,.72)"};">
                <span>Real card photo</span>
                <span style="opacity:.75">ExposureBoost</span>
              </div>
            </div>
          </div>
        </div>
      `;
    } else {
      // Custom colour section with 6 options on one screen (grid)
      sec.style.background = `radial-gradient(1200px 700px at 20% 30%, rgba(110,77,255,.20), transparent 60%),
                              radial-gradient(900px 500px at 80% 20%, rgba(255,79,216,.16), transparent 60%),
                              linear-gradient(180deg, #0F0F14 0%, #141422 100%)`;

      sec.innerHTML = `
        <div class="blob" style="opacity:.22"></div>
        <div class="blob b2" style="opacity:.18"></div>

        <div class="centerCol" style="width:min(1100px,100%); text-align:left">
          <div class="kicker"><span class="kdot"></span> Coloured Metal Card</div>
          <h1 style="margin:0 0 10px; text-align:left">Choose your colour.</h1>
          <p class="lead" style="max-width:860px; text-align:left">Same premium metal card ‚Äî pick a colour that matches your brand. Tap ‚ÄúAdd to cart‚Äù to choose engraving.</p>

          <div class="colourGrid">
            ${CUSTOM_COLOURS.map(c=>`
              <div class="colourBox" data-bg="${c.bg}">
  ${c.id==="black" ? `<div class="badge"><span class="spark"></span> Most popular</div>` : ``}

                <div class="colourTop">
                  <div class="colourName">${c.label}</div>
                  <div class="colourPrice">¬£${PRICE}</div>
                </div>
                <img class="colourImg" src="${c.image}" alt="${c.label} card">
                <div class="actions" style="margin-top:12px">
                  <button class="btn primary small" data-add="custom-${c.id}">Add to cart</button>
                  <a class="btn ghost small" href="${p.example}" target="_blank" rel="noopener">View example</a>
                </div>
              </div>
            `).join("")}
          </div>
        </div>
      `;
    }

    cardsMount.appendChild(sec);
    allSections.push(sec);
    dotButtons.push(buildDot(p.id,p.name));
  });

  allSections.push(document.getElementById('testimonials'));
  allSections.push(document.getElementById('examples'));
  allSections.push(document.getElementById('faq'));
  dotButtons.push(buildDot('testimonials','Testimonials'));
  dotButtons.push(buildDot('examples','Examples'));
  dotButtons.push(buildDot('faq','FAQ'));

  // Highlight active dot
  const obs = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if(entry.isIntersecting){
        const idx = allSections.indexOf(entry.target);
        dotButtons.forEach(d => d.classList.remove('active'));
        if(idx >= 0 && dotButtons[idx]) dotButtons[idx].classList.add('active');
      }
    });
  }, {root: snap, threshold: 0.6});
  allSections.forEach(sec => obs.observe(sec));
  dotButtons[0].classList.add('active');

  

  // ===== Modal with previews + logo button =====
  const modal = document.getElementById('engraveModal');
  const modalHint = document.getElementById('modalHint');
  const closeModal = document.getElementById('closeModal');
  const toast = document.getElementById('toast');
  const silverPreview = document.getElementById('silverPreview');
  const goldPreview = document.getElementById('goldPreview');

  let pendingProduct = null;

  function showToast(msg){
    toast.textContent = msg;
    toast.classList.add('show');
    clearTimeout(showToast._t);
    showToast._t = setTimeout(()=>toast.classList.remove('show'), 1700);
  }

  function openModal(product){
    pendingProduct = product;
    modalHint.textContent = `Select engraving colour for: ${product.name}`;
    // both options show same card photo for now (realistic visual)
    silverPreview.src = product.image;
    goldPreview.src = product.image;
    modal.classList.add('open');
    modal.setAttribute('aria-hidden','false');
  }
  function closeEngraving(){
    pendingProduct = null;
    modal.classList.remove('open');
    modal.setAttribute('aria-hidden','true');
  }
  closeModal.addEventListener('click', closeEngraving);
  modal.addEventListener('click', (e)=>{ if(e.target === modal) closeEngraving(); });
  document.addEventListener('keydown', (e)=>{ if(e.key === "Escape") closeEngraving(); });

  // Engraving choice
  document.querySelectorAll('.optCard').forEach(btn=>{
    btn.addEventListener('click', ()=>{
      if(!pendingProduct) return;
      const engraving = btn.dataset.engrave;
      const itemName = `${pendingProduct.name} with ${engraving} engraving`;
      addToCart({name:itemName, base:pendingProduct.name, engraving, price:PRICE, image:pendingProduct.image, qty:1});
      closeEngraving();
      showToast(`Added: ${itemName}`);
    });
  });

  // Add to cart click handler
  document.addEventListener('click', (e)=>{
    const addBtn = e.target.closest('[data-add]');
    if(!addBtn) return;

    const key = addBtn.dataset.add;
    let product = null;

    // single products
    product = PRODUCTS.find(p => p.id === key);
    if(product){
      openModal(product);
      return;
    }

    // custom colours
    if(key.startsWith("custom-")){
      const cId = key.replace("custom-","");
      const colour = CUSTOM_COLOURS.find(c=>c.id===cId);
      if(colour){
        openModal({
          name: `Custom Colour (${colour.label}) Metal Card`,
          image: colour.image
        });
      }
    }
  });

  

