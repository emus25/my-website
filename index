          </div>

          <div class="exampleLinks">
            <a class="btn primary small" href="${ind.example}" target="_blank" rel="noopener">Open example ‚Üí</a>
            <a class="btn small ghost" href="#shop">Order your card ‚Üí</a>
          </div>
        </div>`;
    }

    function renderIndustries(){
      industryRow.innerHTML = "";
      const filtered = INDUSTRIES.filter(i=>i.letter===activeLetter);
      filtered.forEach((ind,idx)=>{
        const b = document.createElement("button");
        b.className = "industryBtn" + (idx===0 ? " active":"");
        b.textContent = ind.name;
        b.addEventListener("click", ()=>{
          [...industryRow.querySelectorAll(".industryBtn")].forEach(x=>x.classList.remove("active"));
          b.classList.add("active");
          showIndustry(ind);
        });
        industryRow.appendChild(b);
      });
      if(filtered[0]) showIndustry(filtered[0]);
    }

    renderAZ();
    renderIndustries();
  });

</script>


